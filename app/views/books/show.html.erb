  <font color="green">
    <% if flash[:notice] %>
      <p id="notice">
        <%= flash[:notice] %>
      </p>
    <% end %>
  </font>

<%= render 'users/user_info', user: @user %>

<div>
<h2>New book</h2>
<%= form_with model:@book_new, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  </br>
  <%= f.submit 'Create Book' %>
<% end %>
</div>

<h1>Book detail</h1>
  <table>
    <thead>
      <tr>
        <th colspan="5"></th>
      </tr>
    </thead>
    
    <tdoby>
        <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpg', fallback: "no_image.jpg" %>
            </br>
            <%= @user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@book.id) do %>
            <%= @book.title %>
            <% end %>
            </td>
          <td><%= @book.body %></td>
             <td>
            <% if @book.user == current_user %>
              <%= link_to "Edit", edit_book_path(@book) %>
            <% end %>
          </td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to "Destroy", book_path(@book), method: :delete %>
            <% end %>
          </td>
        </tr>
    </tdoby>
    
  </table>