

<div>
<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  </br>
  <%= f.submit 'Create Book' %>
<% end %>
</div>


<div>
  <h1>Users</h1>
  <table>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    
    <tdoby>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= attachment_image_tag @user, :profile_image_id, :fill, 50, 50, format: 'jpg', fallback: "no_image.jpg" %>
          </td>
          <td><%= user.name %></td>
          <td><%= link_to "Show" , user_path(user.id) %></td>
        </tr>
      <% end %>
    </tdoby>
    
  </table>
</div>