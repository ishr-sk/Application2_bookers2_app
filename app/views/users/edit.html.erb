<font color="red">
<% if @user.errors.any? %>
  <h2><%= @user.errors.count %> error prohibited this obj from being saved:</h2>
  <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>
</font>

<div class="container">
  <div class="row">
    <div class="col-lg-5 mx-auto pt-3">
<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  </br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: 'form-control' %>
  </br>
  <label for="inputImage">Image</label>
  </br>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  </br>
  <label for="inputIntroduction">Introduction</label>
  </br>
  <%= f.text_area :introduction, autofocus: true, id: "user_introduction", placeholder: "自己紹介文", class: 'form-control' %>  
  </br>
  <%= f.submit "Update User", class: 'btn btn-secondary' %>
  </br>
<% end %>
    </div>
  </div>
</div>
