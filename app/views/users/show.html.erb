<font color="green">
  <% if flash[:notice] %>
    <p id="notice">
  <%= flash[:notice] %>
    </p>
<% end %>
</font>

<%= render 'users/user_info', user: @user %>

<%= render 'books/book_new', book: @book %>

<div>
<h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    
   <tdoby>
      <% @books.each do |book| %>
        <tr>
          <td>
          <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpg', fallback: "no_image.jpg" %>
          </td>
          <td>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tdoby>
  </table>
  <%= paginate @books %>
  </div>